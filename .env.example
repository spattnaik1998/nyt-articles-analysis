# Environment Variables Template
# Copy this file to .env and fill in your values

# OpenAI API (for LLM extraction)
OPENAI_API_KEY=your_openai_api_key_here

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# Database (future use)
DATABASE_URL=sqlite:///./data/nyt_platform.db

# Model Configuration
EMBEDDING_MODEL=vinai/bertweet-base
SENTIMENT_MODEL_FINANCIAL=ProsusAI/finbert
SENTIMENT_MODEL_OPINION=cardiffnlp/twitter-roberta-base-sentiment-latest

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Data Paths
DATA_DIR=./data
MODELS_DIR=./models
CACHE_DIR=./cache
